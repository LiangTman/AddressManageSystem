<script>
    $(function () {
        $('#example1').DataTable();
        $(".content").on("click",".btn_del",function () {
            var $tr = $(this).parents("tr");
            var empId = $tr.attr("id");
            layer.confirm("是否工号为"+empId+"的记录",{icon:3,title:"删除记录?"},function (index){
                $.ajax({
                    type: "POST",
                    url: "${pageContext.request.contextPath}/emp/del.do",
                    data: {"empId":empId},
                    success: function(res){
                        var code = res["code"];
                        if(code == 200){
                            layer.msg("操作成功",{time:2000},function (){});
                            window.location.reload();
                        }
                    },
                    dataType:"JSON"
                });
                layer.close(index);
            });
        });


    })

</script>
